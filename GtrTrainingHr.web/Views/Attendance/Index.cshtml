@model IEnumerable<GtrTrainingHr.web.Models.Attendance>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateOrEdit">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dtDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OutTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emp)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dtDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emp.Id)
            </td>
            <td>
                    <a asp-action="CreateOrEdit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <form asp-action="Delete" style="display:none" id="DeleteForm_@item.Id">
                        <input name="id" value="@item.Id" />
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>
        function DeleteFormSubmit(Id) {
            var form = $("#DeleteForm_" + Id);

            var isconfirm = confirm("Are you sure to delete?");

            if (isconfirm) {
                form.submit();
            }
        }</script>
}
