@model IEnumerable<GtrTrainingHr.web.Models.Shift>

@{
    ViewData["Title"] = "Shift Create or Update";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateOrEdit">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShiftName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShiftLate)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShiftName)
            </td>
            <td>
                    <a asp-action="CreateOrEdit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-danger" onclick="DeleteFormSubmit('@item.Id')">Delete</a>
                    <form asp-action="Delete" style="display:none" id="DeleteForm_@item.Id">
                        <input name="id" value="@item.Id" />
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>
        function DeleteFormSubmit(Id) {
            var form = $("#DeleteForm_" + Id);

            var isconfirm = confirm("Are you sure to delete?");

            if (isconfirm) {
                form.submit();
            }
        }</script>
}
